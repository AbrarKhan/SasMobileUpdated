<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/contacts_item_bckgd"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:paddingLeft="15dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <TableRow android:layout_marginBottom="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone"
                android:textSize="@dimen/contactus_size"
                android:textColor="#6867a8"/>

            <TextView
                android:id="@+id/contact_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+968XXXXXX"
                android:textColor="@android:color/black"
                android:textSize="@dimen/contactus_size"
                android:layout_marginLeft="10dp" />
        </TableRow>

        <TableRow android:layout_marginBottom="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fax"
                android:textSize="@dimen/contactus_size"
                android:textColor="#6867a8"/>

            <TextView
                android:id="@+id/contact_fax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+968XXXXXX"
                android:textColor="@android:color/black"
                android:textSize="@dimen/contactus_size"
                android:layout_marginLeft="10dp" />
        </TableRow>

        <TableRow android:layout_marginBottom="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textSize="@dimen/contactus_size"
                android:textColor="#6867a8"/>

            <TextView
                android:id="@+id/contact_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Oman,Muscat"
                android:textColor="@android:color/black"
                android:textSize="@dimen/contactus_size"
                android:layout_marginLeft="10dp" />
        </TableRow>

    </TableLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/phone_button"
            android:src="@drawable/call_ic"
            android:layout_margin="8dp" />
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/grey" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/email_button"
            android:src="@drawable/mail_ic"
            android:layout_margin="8dp" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/grey" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/map_button"
            android:src="@drawable/location_ic"
            android:layout_margin="8dp" />

    </LinearLayout>
</LinearLayout>